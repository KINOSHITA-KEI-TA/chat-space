.Chat-main
  .Chat-main__info
    .Chat-main__info__chat-user
      .Chat-main__info__chat-user__chat-name test
      %ul.Chat-main__info__chat-user__chat-member
        Member: 
        %li.Chat-main__info__chat-user__member-name KEI
    %a.Chat-main__info__chat-user__edit{:href => '#'} Edit
    
  .Chat-main__message-list
