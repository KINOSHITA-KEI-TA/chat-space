.Chat-main
  .Chat-main__info
    .Chat-main__info__chat-user
      .Chat-main__info__chat-user__chat-name
        = @group.name
        %ul.Chat-main__info__chat-user__chat-member
          Member: 
          %li.Chat-main__info__chat-user__member-name
          - @group.users.each do |user|
            = user.name
    = link_to edit_group_path(@group.id),class:"Chat-main__info__chat-user__edit" do
      Edit
 
  .Chat-main__message-list
    = render @messages


  .Chat-main__message-form
    = form_with model: [@group, @message], html: {class: "Form-box"}, local: true do |f|
      .Form-box__form-contents
        = f.text_field :text, class: 'Form-box__form-contents__text-box', placeholder: 'type a message'
        = f.label :image, class: 'Form-box__form-contents__image' do
          = icon('far', 'image', class: '')
          = f.file_field :image, class: 'File'
        = f.submit 'Send', class: 'Form-box__submitBtn'